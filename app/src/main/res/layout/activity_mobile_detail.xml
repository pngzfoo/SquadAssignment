<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.main.mobile_detail.MobileDetailActivity" android:id="@+id/mobileDetailImage">

    <ImageView
            android:layout_width="420dp"
            android:layout_height="286dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/mobileDetailImageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.555"/>
    <TextView
            android:text="mobileDetailTextView"
            android:layout_width="141dp"
            android:layout_height="29dp"
            android:textSize="20dp"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/mobileDetailImageView"
            android:id="@+id/mobileDetailTextView"/>
    <TextView
            android:text="mobileBrandDetailTextView"
            android:layout_width="66dp"
            android:layout_height="11dp" android:id="@+id/mobileBrandDetailTextView"
            android:layout_marginStart="15dp" app:layout_constraintStart_toEndOf="@+id/mobileDetailTextView"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/mobileDetailImageView"/>
    <TextView
            android:text="MobileDescription"
            android:layout_width="383dp"
            android:layout_height="199dp" android:id="@+id/mobileDetailDescriptionTextView"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/mobileDetailTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"/>
    <TextView
            android:text="Rating: XXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mobileDetailRatingTextView"
            android:textColor="@color/white"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/mobileBrandDetailTextView"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="@+id/mobileDetailImageView"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mobileDetailPriceTextView"
            app:layout_constraintBottom_toTopOf="@+id/mobileBrandDetailTextView" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="@+id/mobileDetailImageView" android:layout_marginEnd="30dp"
            android:textColor="@color/white" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>